---
/**
 * Waitlist Error Page
 * Shown when confirmation fails (expired token, invalid token, etc.)
 */
import '../../styles/global.css';

// Get reason from URL params
const reason = Astro.url.searchParams.get('reason') || 'unknown';

const errorMessages: Record<string, { title: string; message: string }> = {
  expired: {
    title: 'Link Expired',
    message: 'This confirmation link has expired. Please sign up again to receive a new confirmation email.',
  },
  invalid: {
    title: 'Invalid Link',
    message: 'This confirmation link is invalid. Please make sure you clicked the correct link from your email.',
  },
  missing_token: {
    title: 'Missing Token',
    message: 'The confirmation link is incomplete. Please click the link from your confirmation email.',
  },
  server_error: {
    title: 'Something Went Wrong',
    message: 'We encountered an error processing your request. Please try again later.',
  },
  unknown: {
    title: 'Something Went Wrong',
    message: 'An unexpected error occurred. Please try signing up again.',
  },
};

const error = errorMessages[reason] || errorMessages.unknown;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{error.title} - Accountability Bet</title>
    <meta name="robots" content="noindex" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>

  <body class="min-h-screen bg-gradient-to-br from-purple-600 via-purple-700 to-indigo-800 flex items-center justify-center px-4">
    <div class="max-w-md w-full text-center">
      <!-- Error Icon -->
      <div class="mb-8">
        <div class="w-20 h-20 mx-auto bg-red-500/20 backdrop-blur-sm rounded-full flex items-center justify-center">
          <svg class="w-10 h-10 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
      </div>

      <!-- Content -->
      <h1 class="text-3xl md:text-4xl font-extrabold text-white mb-4">{error.title}</h1>
      <p class="text-lg text-white/80 mb-8">
        {error.message}
      </p>

      <!-- Actions -->
      <div class="space-y-4">
        <a
          href="/"
          class="inline-block w-full bg-white text-purple-600 py-3 px-6 rounded-xl font-semibold hover:bg-white/90 transition-colors"
        >
          Try Again
        </a>
        <a
          href="mailto:support@accountabilitybet.ch"
          class="block text-white/60 hover:text-white transition-colors text-sm"
        >
          Contact Support
        </a>
      </div>
    </div>

    <style>
      body {
        font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      }
    </style>
  </body>
</html>
